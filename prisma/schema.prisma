generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int @id @default(autoincrement())
  name        String  
  email       String  @unique
  password    String  
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("users")
}

model Product {
  id          Int @id @default(autoincrement())
  name        String  
  description String
  barcode     String @unique  
  price       Decimal  
  userId      Int
  user        User @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  moviment    Moviment[]

  @@map("products")
}

model Moviment {
  id          Int @id @default(autoincrement())
  productId   Int
  product     Product @relation(fields: [productId], references: [id])
  quantity    Int
  price       Decimal
  createdAt   DateTime @default(now())

  @@map("moviments")
}